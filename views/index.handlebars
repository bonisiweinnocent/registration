<body>
    <form action="/index" method="POST">
        <div class="container">
            <div class="head">
                <h3>The Registration numbers.</h3>

                {{#if messages.info}}
                <div class="emptyform">
                    <h1> {{messages.info}}</h1>
                </div>
                {{/if}}
                <div class="display  red-text"></div>
                <div class="showAll green-text"></div>
                <div class="enter">
                    Registration No. <textarea name="nameInput" value="nameInput" class="textarea"
                        placeholder="eg.CA 12345" value=""></textarea><br><br>
                    <button class="button-primary addBtn" on type="submit" value="addBtn" name="addBtn">Add</button>
                </div>




            </div>
    </form>
    <form action="/reg_numbers" method="POST">
        <div class="heading">
            <h2>Filter by town</h2>

            <div class="radioBtn">

                <label class="radios">
                    <input type="radio" name="town" class="Radio" value="CA">
                    <span class="label-body">Cape Town</span>
                </label>
                <label class="radios">
                    <input type="radio" name="town" class="Radio" value="CY">
                    <span class="label-body">Bellville</span>
                </label>
                <label class="radios">
                    <input type="radio" name="town" class="Radio" value="Ck">
                    <span class="label-body">Caledon</span>
                </label>
                <div>
                    <button class="button-primary showBtn" on type="submit" value="showBtn"
                        name="showButton">Filter</button>
                </div>
                <div class="pops">
                    {{!-- <span class="popup  plateStyle "> --}}
                        <ul id="pops plateStyle">
                            {{#each displayRegs}}
                            <li>{{regnumber}}</li>
                            {{/each}}
                        </ul>

                        {{!--
                    </span> --}}
                </div>
    </form>
    <form action="/filter" method="POST">
        </div>
        <div class="filter">

        </div>
        <div class="show">
            <div>
                <button class="button-primary showBtn" on type="submit" value="showBtn" name="button">Display
                    All</button>
            </div>
    </form>
    <form action="/reset" method="post">
        <div>
            <button class="button-primary resetBtn" on type="submit" name="Resetbutton" value="Resetbutton"
                name="Resetbutton">Reset</button>
        </div>
    </form>
